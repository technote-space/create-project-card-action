{
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2021",
    "module": "ES2020",
    "lib": [
      "ES2021"
    ],
    "moduleResolution": "node",
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitAny": false
  },
  "include": [
    "src"
  ]
}